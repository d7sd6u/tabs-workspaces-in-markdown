{
  "name": "tabs-workspaces-in-markdown",
  "description": "Use markdown files as workspaces: persist grouped tabs, history and bookmarks",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "a": "shadcn add",
    "build:native:pack": "pnpm exec pkg -t node22-linuxstatic -d --no-bytecode --public-packages '*' --public script.js",
    "build:native:bundle": "pnpm esbuild script.mts --bundle --platform=node --format=cjs --external:zx'*' --alias:zx/globals=zx/build/globals.cjs --outfile=script.js",
    "build:native": "pnpm build:native:bundle && pnpm build:native:pack",
    "build:native:dev": "nix build && cp result/script.mts .",
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@tailwindcss/vite": "^4.1.3",
    "@tanstack/react-query": "^5.71.1",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "@tsconfig/strictest": "^2.0.5",
    "@types/chrome": "^0.0.313",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/mdast": "^4.0.4",
    "@types/node": "^22.13.17",
    "@yao-pkg/pkg": "^6.3.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.23.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.487.0",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "shadcn": "2.4.0-canary.17",
    "tailwind-merge": "^3.1.0",
    "tailwindcss": "^4.1.3",
    "trpc-browser": "^1.4.4",
    "tw-animate-css": "^1.2.5",
    "unist-util-select": "^5.1.0",
    "zod": "^3.24.2",
    "zx": "^8.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.1",
    "@swc-node/register": "^1.10.10",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@wxt-dev/auto-icons": "^1.0.2",
    "@wxt-dev/module-react": "^1.1.2",
    "esbuild": "^0.25.2",
    "eslint": "^9.20.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.24.1",
    "wxt": "^0.19.29"
  }
}
